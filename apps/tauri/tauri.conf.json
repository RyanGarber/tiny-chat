{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tiny Chat",
  "version": "0.1.1",
  "identifier": "com.ryangarber.tiny-chat",
  "app": {
    "windows": [
      {
        "title": "Tiny Chat",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "assets/icons/32x32.png",
      "assets/icons/128x128.png",
      "assets/icons/128x128@2x.png",
      "assets/icons/icon.icns",
      "assets/icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBQzUyOUU0ODNBMTg1QUUKUldTdWhhR0Q1Q25GdXN6d2dzMnR3MDRiT0ZURzVSZHByYzQ0SjdoSnhsZE1qWVVBSFJCS3VOeGoK",
      "endpoints": [
        "https://github.com/RyanGarber/tiny-chat/releases/latest/download/latest.json"
      ]
    }
  },
  "build": {
    "beforeDevCommand": "npm run -w @tiny-chat/core-frontend dev",
    "devUrl": "http://localhost:8010",
    "beforeBuildCommand": "npm run -w @tiny-chat/core-frontend build",
    "frontendDist": "../../core/frontend/dist"
  }
}
