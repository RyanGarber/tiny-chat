generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isAnonymous   Boolean?  @default(false)
  settings      Json      @default("{}")
  accounts      Account[]
  chats         Chat[]
  folders       Folder[]
  memories      Memory[]
  messages      Message[]
  sessions      Session[]
  summaries     Summary[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Folder {
  id        String    @id
  userId    String
  title     String?
  createdAt DateTime  @default(now())
  chats     Chat[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  memories  Memory[]
  messages  Message[]
  summaries Summary[]

  @@index([userId])
  @@map("folder")
}

model Chat {
  id        String    @id
  userId    String
  folderId  String
  title     String?
  createdAt DateTime  @default(now())
  temporary Boolean   @default(false)
  folder    Folder    @relation(fields: [folderId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  memories  Memory[]
  messages  Message[]
  summaries Summary[]

  @@index([userId])
  @@index([folderId])
  @@map("chat")
}

model Message {
  id         String                 @id
  userId     String
  folderId   String
  chatId     String
  previousId String?                @unique
  author     Author
  config     Json
  data       Json
  metadata   Json
  createdAt  DateTime               @default(now())
  embedding  Unsupported("vector")?
  chat       Chat                   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  folder     Folder                 @relation(fields: [folderId], references: [id], onDelete: Cascade)
  previous   Message?               @relation("Chat", fields: [previousId], references: [id], onDelete: Cascade)
  next       Message?               @relation("Chat")
  user       User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  memories   Memory[]               @relation("MemoryToMessage")
  summaries  Summary[]              @relation("MessageToSummary")

  @@index([userId])
  @@index([folderId])
  @@index([chatId])
  @@map("message")
}

model Summary {
  id        String                 @id
  userId    String
  folderId  String
  chatId    String
  config    Json
  content   String
  createdAt DateTime               @default(now())
  embedding Unsupported("vector")?
  chat      Chat                   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  folder    Folder                 @relation(fields: [folderId], references: [id], onDelete: Cascade)
  user      User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]              @relation("MessageToSummary")

  @@index([userId])
  @@index([folderId])
  @@index([chatId])
  @@map("summary")
}

model Memory {
  id         String                 @id
  userId     String
  folderId   String
  chatId     String
  config     Json
  fact       String
  category   MemoryCategory
  stability  MemoryStability
  evidence   String[]
  confidence Float
  createdAt  DateTime               @default(now())
  latest     Boolean                @default(true)
  embedding  Unsupported("vector")?
  chat       Chat                   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  folder     Folder                 @relation(fields: [folderId], references: [id], onDelete: Cascade)
  user       User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages   Message[]              @relation("MemoryToMessage")

  @@index([userId])
  @@index([folderId])
  @@index([chatId])
  @@map("memory")
}

enum Author {
  USER
  MODEL
}

enum MemoryCategory {
  IDENTITY
  PREFERENCES
  PROJECTS
  SKILLS
  CONSTRAINTS
}

enum MemoryStability {
  SHORT_TERM
  MEDIUM_TERM
  LONG_TERM
}
